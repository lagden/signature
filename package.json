{
  "name": "@tadashi/signature",
  "version": "2.0.1",
  "description": "Generates and verifies signatures",
  "main": "index.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "xo",
    "test": "nyc ava"
  },
  "keywords": [
    "hmac",
    "signuture",
    "validate"
  ],
  "author": "Thiago Lagden",
  "license": "MIT",
  "devDependencies": {
    "ava": "0.25.0",
    "coveralls": "3.0.0",
    "nyc": "11.6.0",
    "xo": "0.20.3"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "semicolon": false,
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "capitalized-comments": 0
    }
  }
}
